{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LeanSpec Runners Configuration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "default": {
      "type": "string"
    },
    "runners": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z0-9-]+$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string"
            },
            "command": {
              "type": "string"
            },
            "detection": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "commands": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "config_dirs": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "env_vars": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "extensions": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "symlink_file": {
              "type": "string"
            },
            "args": {
              "type": "array",
              "description": "Arguments passed to the runner command. Use {PROMPT} as a placeholder for the session prompt text (spec content + user instructions). The placeholder is replaced at runtime; if no prompt is available the arg is omitted.",
              "items": {
                "type": "string"
              }
            },
            "env": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}