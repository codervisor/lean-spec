{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LeanSpec Runners Configuration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "default": {
      "type": "string"
    },
    "runners": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z0-9-]+$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string"
            },
            "command": {
              "type": "string"
            },
            "detection": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "commands": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "config_dirs": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "env_vars": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "extensions": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "symlink_file": {
              "type": "string"
            },
            "args": {
              "type": "array",
              "description": "Static arguments passed to the runner command before the prompt.",
              "items": {
                "type": "string"
              }
            },
            "prompt_flag": {
              "type": "string",
              "description": "Controls how the session prompt is passed to the runner. Set to the flag name (e.g. '--message') to prepend it before the prompt value. Set to '-' to suppress prompt injection entirely. Omit (or set to null) to append the prompt as a positional argument."
            },
            "env": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}