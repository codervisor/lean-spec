{
  "name": "@leanspec/api-tests",
  "version": "0.1.0",
  "private": true,
  "description": "API contract validation test suite for LeanSpec",
  "type": "module",
  "scripts": {
    "test": "echo 'Skipping API integration tests (require running server). Use pnpm test:api to run with server.'",
    "test:api": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "leanspec",
    "api",
    "contracts",
    "testing"
  ],
  "author": "LeanSpec",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.19.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=20"
  }
}