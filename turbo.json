{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**"
      ]
    },
    "build:templates": {
      "cache": false,
      "outputs": [
        "AGENTS.md"
      ]
    },
    "dev": {
      "dependsOn": [
        "@leanspec/ui-components#build"
      ],
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "SPECS_MODE",
        "SPECS_DIR",
        "VITE_API_URL"
      ]
    },
    "dev:web": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "SPECS_MODE",
        "SPECS_DIR",
        "VITE_API_URL"
      ]
    },
    "dev:desktop": {
      "dependsOn": [
        "@leanspec/ui-components#build",
        "@leanspec/ui-vite#build"
      ],
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "SPECS_MODE",
        "SPECS_DIR",
        "TAURI_DEBUG"
      ]
    },
    "build:desktop": {
      "dependsOn": [
        "@leanspec/ui-components#build",
        "@leanspec/ui-vite#build"
      ],
      "outputs": [
        "src-tauri/target/**"
      ],
      "cache": false
    },
    "typecheck": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:run": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:api": {
      "cache": false,
      "outputs": [
        "coverage/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "format": {
      "outputs": []
    }
  }
}