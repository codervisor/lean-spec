{
  "name": "@leanspec/ui",
  "version": "0.2.12",
  "description": "LeanSpec web UI launcher for visual spec management",
  "type": "module",
  "bin": {
    "leanspec-ui": "./bin/ui.js"
  },
  "scripts": {
    "dev": "next dev --port 3001",
    "build": "next build && node ./scripts/post-build.mjs",
    "start": "next start --port 3001",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/lib/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/lib/db/seed.ts"
  },
  "files": [
    "bin/",
    "shared/",
    ".next/standalone/packages/",
    ".next/standalone/node_modules/.pnpm/",
    ".next/static/",
    "public/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "leanspec",
    "spec",
    "documentation",
    "cli",
    "ui"
  ],
  "author": "Marvin Zhang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codervisor/lean-spec.git"
  },
  "bugs": {
    "url": "https://github.com/codervisor/lean-spec/issues"
  },
  "homepage": "https://lean-spec.dev",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.8",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@vercel/analytics": "^1.6.1",
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "commander": "^14.0.2",
    "d3-force": "^3.0.0",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.38.4",
    "fuse.js": "^7.1.0",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.553.0",
    "mermaid": "^11.12.2",
    "next": "16.0.10",
    "next-themes": "^0.4.6",
    "open": "^11.0.0",
    "ora": "^9.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-i18next": "^16.5.0",
    "react-markdown": "^9.1.0",
    "react-window": "^2.2.3",
