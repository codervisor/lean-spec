{
  "template": "spec-template.md",
  "specsDir": "specs",
  "structure": {
    "pattern": "flat",
    "prefix": "",
    "dateFormat": "YYYYMMDD",
    "sequenceDigits": 3,
    "defaultFile": "README.md"
  },
  "features": {
    "aiAgents": true
  },
  "templates": {
    "default": "spec-template.md"
  },
  "frontmatter": {
    "custom": {
      "issue": "string",
      "pr": "string",
      "milestone": "string",
      "superseded-by": "string"
    }
  },
  "variables": {
    "project": "lean-spec",
    "team": "Core Development"
  }
}